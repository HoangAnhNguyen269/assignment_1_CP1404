BoxLayout:
    orientation:'vertical'
    BoxLayout:
        orientation:'horizontal'
        TextInput:
            id: input_number
            text: '34'
            multiline: False
            on_text:app.convert_m_to_km(self.text)
        BoxLayout:
            orientation:'vertical'
            Button:
                text:"up"
                on_press:app.increase_m(int(input_number.text))
            Button:
                text:"down"
                on_press:app.decrease_m(int(input_number.text))
    BoxLayout:
        orientation:'vertical'
        Label:
            id: output_km
            text: app.miles +' miles'

